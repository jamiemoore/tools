{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "rangeStrategy": "pin",
  "packageRules": [
    {
      "automerge": true,
      "matchPackageNames": [
        "/.*/"
      ]
    },
    {
      "matchDepTypes": ["engines"],
      "enabled": true
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchFileNames": [
        "Dockerfile"
      ],
      "semanticCommitType": "fix"
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": "at any time"
  },
  "prConcurrentLimit": 1,
  "prHourlyLimit": 60,
  "branchConcurrentLimit": 2,
  "nvmrc": {
    "enabled": true
  }
}
